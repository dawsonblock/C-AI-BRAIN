# Secure production Dockerfile for Brain-AI REST service
FROM python:3.12-slim

# Security: Run as non-root user
RUN groupadd -r brain && useradd -r -g brain brain

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Install Brain-AI wheel if present
RUN if ls wheels/brain_ai-*.whl >/dev/null 2>&1; then \
        pip install --no-cache-dir wheels/brain_ai-*.whl; \
    else \
        echo "[WARN] brain_ai wheel not found in wheels/ - install at runtime"; \
    fi

# Create data directories with proper permissions
RUN mkdir -p data/persistence data/facts data/eval && \
    chown -R brain:brain /app

# Switch to non-root user
USER brain

# Security: Read-only filesystem (except data directories)
# Mount data directories as volumes with read-write
VOLUME ["/app/data"]

# Expose port
EXPOSE 5001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:5001/api/v1/system/status', timeout=5)"

# Run application with security limits
CMD ["python", "-u", "app.py"]

